<link rel="stylesheet" href="/css/user_staff.css" />
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex-justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-users"></i> All Users </a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update user</h2>
      <span class="text-lightt">Use the form bellow to update an account</span>
    </div>

    <!--add user form-->
    <form action="/api/users/<%= user._id %>" method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-lightt">CIN</label>
          <input
            type="text"
            name="cin"
            value="<%= user.cin %>"
            placeholder="Mark Stoenis"
          />
        </div>

        <div class="form-group">
          <label for="name" class="text-lightt">First name</label>
          <input
            type="text"
            name="first_name"
            value="<%= user.first_name %>"
            placeholder="Mark Stoenis"
          />
        </div>

        <div class="form-group">
          <label for="name" class="text-lightt">Last name</label>
          <input
            type="text"
            name="last_name"
            value="<%= user.last_name %>"
            placeholder="Stoenis"
          />
        </div>

        <div class="form-group">
          <label for="name" class="text-lightt">phone number</label>
          <input
            type="text"
            name="phone_number"
            value="<%= user.phone_number %>"
            placeholder="12345689"
          />
        </div>

        <div class="form-group">
          <label for="Email" class="text-lightt">Email</label>
          <input
            type="text"
            name="email"
            value="<%= user.email %>"
            placeholder="example@gmail.com"
          />
        </div>
        <div class="form-group">
          <label for="gender" class="text-lightt">Gender</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="Male" <%=
            user.gender == 'Male' ? 'checked' : '' %>>
            <label for="radio-2" class="radio-label">Male</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-3" name="gender" value="Female" <%=
            user.gender == 'Female' ? 'checked' : '' %> >
            <label for="radio-3" class="radio-label">Female</label>
          </div>
        </div>

        <div class="form-group">
          <label for="gender" class="text-lightt">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" <%=
            user.status == 'Active' ? 'checked' : '' %> >
            <label for="radio-4" class="radio-label">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" <%=
            user.status == 'Inactive' ? 'checked' : '' %> >
            <label for="radio-5" class="radio-label">Inactive</label>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>

    <!--/add user form--->
  </div>
</main>
