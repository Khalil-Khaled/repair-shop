<div class="container">
    <div>
      <div>
        <a href="/interventions"><i class="fas fa-angle-double-left"></i> All Interventions</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Intervention</h2>
      <span class="text-light"
        >Use the below form to update an existing intervention</span
      >
    </div>
    <div class="container">
      <div class="row form-group">
        <label for="intervention-notes" class="col-md-3"> car</label>
        <label
          id="intervention-car"
          type="text"
          name="car"
        /><%= intervention.car.brand %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-startDate" class="col-md-3"> startDate</label>
        <label
          id="intervention-startDate"
          type="date"
          name="startDate"
        /><%= intervention.startDate.toLocaleString() %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-estimatedTime" class="col-md-3">
          estimatedDate</label
        >
        <label
          id="intervention-estimatedTime"
          type="date"
          name="estimatedTime"
        /><%= intervention.estimatedTime.toLocaleString() %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-notes" class="col-md-3"> notes</label>
        <label
          id="intervention-notes"
          type="text"
          name="notes"
          value="<%= intervention.notes %>"
        /><%= intervention.notes %> </label> 
      </div>
      <div class="row form-group">
        <label for="intervention-type" class="col-md-3"> type</label>
        <label
          id="intervention-type"
          type="text"
          name="type"
          value="<%= intervention.type %>"
        /><%= intervention.type %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-discount" class="col-md-3"> discount</label>
        <label
        id="intervention-discount"
        type="text"
        name="discount"
        value="<%= intervention.discount %>"
      /><%= intervention.discount %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-price" class="col-md-3"> price with discount</label>
        <label
        id="intervention-price"
        type="text"
        name="price"
        value="<%= intervention.price %>"
      /><%= intervention.price %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-description" class="col-md-3">
          description</label
        >
        <label
        id="intervention-description"
        type="text"
        name="description"
        value="<%= intervention.description %>"
      /><%= intervention.description %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-staff" class="col-md-3"> staff</label>
        <% for(var i = 0; i < intervention.staffs.length; i++) { %>
        <label
        id="intervention-staff"
        type="text"
        name="staff"
      /><%= intervention.staffs[i].first_name %></label> |
      <% } %>
      </div>
      <div class="row form-group">
        <label for="intervention-client" class="col-md-3"> Client</label>
        <label
        id="intervention-client"
        type="text"
        name="client"
        value="<%= intervention.client %>"
      /><%= intervention.client.first_name %></label>
      </div>
      <div class="row form-group">
        <label for="intervention-item" class="col-md-3"> Items</label>
        <% for(var i = 0; i < intervention.items.length; i++) { %>
        <label
        id="intervention-item"
        type="text"
        name="item"
      /><%= intervention.items[i].name %></label> |
      <% } %>
      </div>
    </div>
  </div>
  