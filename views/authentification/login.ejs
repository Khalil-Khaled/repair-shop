<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <form method="POST" action="/auth/login" novalidate>
          <div class="form-group" >
            <label>Email</label>
            <input
            name="email"
              type="email"
              id="email"
              class="form-control"
              placeholder="Enter Username"
            />
            
            <% if (typeof userError !== 'undefined' && userError) { %>
              <div class="alert <%= messageClass %>" role="alert">
                <%= userError %>
                </div>              
            <% } %>
          </div>
        
          <div class="form-group">
            <label>Password</label>
            <input
            name="password"
              type="password"
              id="password"
              class="form-control"
              placeholder="Enter Password"
            />

            <% if (typeof passwordError !== 'undefined' && passwordError) { %>
              <div class="alert <%= messageClass %>" role="alert">
                <%= passwordError %>
                </div>              
            <% } %>

              
          </div>

          <input type="submit" class="btn btn-danger btn-block" value="Login">
          </input>
        </form>
        <p class="lead mt-4">
            No Account? <a href="/auth/register">Register</a>
          </p>
      </div>
    </div>
  </div>
  