<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <div class= "message"></div>
      <form id="reg-form" method="POST" action="/auth/register" novalidate>
        <div class="form-group">
          <label>Username</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            placeholder="Enter Username"
          />
          <% if (typeof usernameError !== 'undefined' && usernameError) { %>
            <div class="alert <%= messageClass %>" role="alert">
              <%= usernameError %>
              </div>              
          <% } %>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
          <% if (typeof emailError !== 'undefined' && emailError) { %>
            <div class="alert <%= messageClass %>" role="alert">
              <%= emailError %>
              </div>              
          <% } %>
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            placeholder="Enter Password"
          />
          <% if (typeof passwordRelError !== 'undefined' && passwordReError) { %>
            <div class="alert <%= messageClass %>" role="alert">
              <%= passwordReError %>
              </div>              
          <% } %>
        </div>

        <input type="submit" class="btn btn-danger btn-block" value="Register">
        </input>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/auth/login">Login</a></p>
    </div>
  </div>
</div>

