<link rel="stylesheet" href="/css/item-list.css" />
<div class="shop-bg">
  <!-- Items Area -->
  <div class="shop-group">
    <h1>Our Products</h1>
    <section>
      <div class="products-wrapper">
        <div class="group-title">
          <h1>Category 1</h1>
        </div>
        <div class="products">
          <% items.forEach(item => { %>
          <div class="product">
            <p><%= item.name %></p>
            <img
              src="<%= item.itemImagePath %>"
              alt=""
              width="150px"
              height="150px"
              style="object-fit: contain"
            />
            <div class="product-price">
              <p><%= item.price %> TND</p>
              <button class="btn-sm btn-danger">Add to Cart</button>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="see-all">
          <a href="">see all <i class="fas fa-chevron-right"></i></a>
        </div>
      </div>
    </section>
    <section>
      <div class="products-wrapper">
        <div class="group-title">
          <h1>Featured Offers</h1>
        </div>
        <div class="products">
          <div class="product">
            <p>Bumpers & Components</p>
            <img src="img/car parts/bumpers.jpg" alt="" />
            <div class="product-price">
              <p>25 TND</p>
              <button class="btn-sm btn-danger">Add to Cart</button>
            </div>
          </div>
        </div>
        <div class="see-all">
          <a href="">see all <i class="fas fa-chevron-right"></i></a>
        </div>
      </div>
    </section>
  </div>

  <!-- Offers Area -->
  <div class="shop-group">
    <h1>Our Offers</h1>
    <section>
      <div class="products-wrapper">
        <div class="group-title">
          <h1>Featured Offers</h1>
        </div>
        <div class="products">
          <% offers.forEach(offer => { %>
          <div class="product">
            <p><%= offer.name %></p>
            <img
              src="<%= offer.offerImagePath %>"
              alt=""
              width="150px"
              height="150px"
              style="object-fit: contain"
            />
            <div class="product-price">
              <p><%= offer.price %> TND</p>
              <button class="btn-sm btn-danger">Add to Cart</button>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="see-all">
          <a href="">see all <i class="fas fa-chevron-right"></i></a>
        </div>
      </div>
    </section>
  </div>
</div>
