<div
  style="
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2em;
  "
>
  <h1 style="margin-top: 1em">Shopping Cart</h1>
  <% if(cartOffers.length > 0){ %>
  <h2>Offers :</h2>
  <table class="table" style="border: 1px solid gray; width: 80%">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < cartOffers.length; i++) { %>
      <tr>
        <td><%= cartOffers[i].name %></td>
        <td><%= cartOffers[i].price %> TND</td>
        <td><%= cartOffers[i].cartCount %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% }else{ %>
  <h2>There are no offers in the cart !</h2>
  <% } %> <% if(cartItems.length > 0){ %>
  <h2>Items :</h2>
  <table class="table" style="border: 1px solid gray; width: 80%">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < cartItems.length; i++) { %>
      <tr>
        <td><%= cartItems[i].name %></td>
        <td><%= cartItems[i].price %> TND</td>
        <td><%= cartItems[i].cartCount %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% }else{ %>
  <h2>There are no items in the cart !</h2>
  <% } %> <% if (cartOffers.length > 0 || cartItems.length > 0 ) { %>
  <div style="display: flex; gap: 1em">
    <h2>Total :</h2>
    <h2><%= total %> TND</h2>
  </div>
  <% } %>
</div>
